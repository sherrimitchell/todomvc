<div class="row clearfix">
  <% if todo_item.completed? %>
  <div class="row complete">
    <div class="col-md-2">
      <%= link_to complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch do %>
				<i style="opacity: 0.4;" class="fa fa-check"></i>
        <% end %>
    </div>
    <div class="todo_item">
      <div class="col-md-8"
      <p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
      </div>
    </div>
    <div class="trash">
      <div class="col-md-2">
        <%= link_to todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Are you sure?" } do %>
				<i class="fa fa-trash"></i>
			<% end %>
      </div>
    </div>
  </div>
      <% else %>
      <div class="row complete">
        <div class="col-md-2">
          <%= link_to complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch do %>
    				<i style="opacity: 0.4;" class="fa fa-check"></i>
            <% end %>
      </div>
        <div class="todo_item">
          <div class="col-md-8"
          <p style="opacity: 0.4;"><%= todo_item.content %></p>
          </div>
        </div>
        <div class="trash">
          <div class="col-md-2">
            <%= link_to todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Are you sure?" } do %>
    				<i class="fa fa-trash"></i>
            <% end %>
        </div>
      </div>
      </div>
      <% end %>
