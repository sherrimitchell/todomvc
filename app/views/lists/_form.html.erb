<%= form_tag(@action, method: @http_verb, class: 'list-form') do %>
  <div class="form-group">
    <%= label_tag(:title, "Title: ") %>
    <%= text_field_tag(:title, @list.list_name, size: 40) %>
  </div>

  <div class="form-group">
    <%= label_tag(:item, "Item: ") %>
    <% @items.each do |item|
    <%= text_field_tag(:item, @items, size: 40) %>
  </div> 

  <div><%= submit_tag 'Save', class: 'btn btn-default' %></div>
<% end %>