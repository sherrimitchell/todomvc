<% @todo_lists.each do |todo_list| %>
<div class="clearfix">
  <div class="todo_list_wrapper center-block">
      <div class="todo_list">
          <!-- List 1 -->
            <div class="card">
              <div class="row">
                <div class="card-header"><h4 class="todo_list_title"><%= link_to todo_list.title, todo_list %></h4></div>
                <div class="card-block">
                  <h5 class="card-text text-center todo_list_sub_title"><%= todo_list.description %></h5>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
<% end %>

  <div class="card-footer text-muted text-center">
    <%= link_to 'New Todo list', new_todo_list_path %>
  </div>
